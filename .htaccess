# Enable Rewrite Engine
RewriteEngine On
RewriteBase 

# Force index.php or index to /
RewriteCond %{THE_REQUEST} \s/index\.php [NC]
RewriteRule ^index\.php$ / [R=301,L]
RewriteRule ^index$ / [R=301,L]

# Redirect .php URLs to extension-less versions (e.g., all-products.php → all-products)
RewriteCond %{THE_REQUEST} \s/+pages/([a-zA-Z0-9_-]+)\.php [NC]
RewriteRule ^pages/([a-zA-Z0-9_-]+)\.php$ /$1 [R=301,L]

# Internally rewrite clean URLs (e.g., /all-products → /pages/all-products.php)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9_-]+)$ pages/$1.php [L]
