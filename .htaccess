# ----------------------------------------------------
#  .htaccess – new.stockoutindia.com  (copy-paste all)
# ----------------------------------------------------
<IfModule mod_rewrite.c>
    RewriteEngine On

    ####################################################################
    # 1)  Redirect any real  *.php   request to its clean URL counterpart
    #     (do this FIRST, before we start skipping real files)
    ####################################################################
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^(.+)\.php$  /$1  [R=301,L]

    ####################################################################
    # 2)  Skip rewrites for actual files or folders (CSS, JS, images…)
    ####################################################################
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    ####################################################################
    # 3)  Friendly URLs → matching scripts
    ####################################################################

    # Root-level pages
    RewriteRule ^$                           index.php          [L]
    RewriteRule ^(index|login|register)/?$   $1.php             [L]

    # /pages/ section
    RewriteRule ^pages/(account|all-industries|all-products|make-payment|faq)/?$ \
                pages/$1.php                                     [L]

    # /admin/ section
    RewriteRule ^admin/?$                       admin/admin_index.php [L]
    RewriteRule ^admin/(admin_index|tables)/?$  admin/$1.php          [L]

    ####################################################################
    # 4)  Generic fallback: if “whatever.php” exists, /whatever works
    ####################################################################
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.+?)/?$                      $1.php            [L]
</IfModule>
