<IfModule mod_rewrite.c>
    RewriteEngine On

    # Never rewrite real files or folders
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Root pages
    RewriteRule ^$                     index.php          [L]
    RewriteRule ^(index|login|register)/?$  $1.php        [L]

    # /pages/ section
    RewriteRule ^pages/(account|all-industries|all-products|make-payment|faq)/?$  pages/$1.php  [L]

    # /admin/ section
    RewriteRule ^admin/?$                          admin/admin_index.php [L]
    RewriteRule ^admin/(admin_index|tables)/?$     admin/$1.php         [L]

    # Generic “add .php” fallback
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.+?)/?$                          $1.php  [L]
</IfModule>
